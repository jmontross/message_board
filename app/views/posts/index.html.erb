<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Viralheat Message Board" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr style="background-color:black">
      <th><%= link_to image_tag('/assets/post.png'),  url_for({:controller => :posts, :action => :new}) %>
      </th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to image_tag('/assets/pen.png'), url_for({:controller => :posts, :action => :edit,:id => post.id})
             %>
        </td>

        <td colspan="4"><%= post.message_truncated %>
          <br /> <%= post.created_at.strftime("Posted %B %d, %Y @ %k:%M %p") %> by <%= post.name %>
       </td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
